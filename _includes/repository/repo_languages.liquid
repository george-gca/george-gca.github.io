{% assign lang = site.active_lang | split: '-' | first %}
{% if lang == 'pt' %}
  {% assign lang = site.active_lang %}
{% endif %}

<div class="repo p-2 text-center">
  <a href="https://github.com/anuraghazra/github-readme-stats">
    <img
      class="repo-img-light w-200"
      alt="{{ include.username }}"
      src="https://github-readme-stats.vercel.app/api/top-langs/?username={{ include.username }}&theme={{ site.repo_theme_light }}&locale={{ lang }}&show_icons=true&size_weight=0&count_weight=1&layout=donut"
    >
    <img
      class="repo-img-dark w-200"
      alt="{{ include.username }}"
      src="https://github-readme-stats.vercel.app/api/top-langs/?username={{ include.username }}&theme={{ site.repo_theme_dark }}&locale={{ lang }}&show_icons=true&size_weight=0&count_weight=1&layout=donut"
    >
  </a>
</div>
