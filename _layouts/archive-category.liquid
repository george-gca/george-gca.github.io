---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title"><i class="fa-solid fa-tag fa-sm"></i> {{ page.title }}</h1>
    <p class="post-description">{% t descriptions.archive-category %}</p>
  </header>

  <article>
    <div class="table-responsive">
      <table class="table table-sm table-borderless">
        {% for post in page.posts %}
          <tr>
            <th scope="row">{% include date_format.liquid format='short' date_from=post %}</th>
            <td>
              {% if post.redirect == blank %}
                <a class="post-link" href="{{ post.url | prepend: site.baseurl }}">{{ post.title }}</a>
              {% elsif post.redirect contains '://' %}
                <a class="post-link" href="{{ post.redirect }}" target="_blank">{{ post.title }}</a>
              {% else %}
                <a class="post-link" href="{{ post.redirect | prepend: site.baseurl }}">{{ post.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  </article>
</div>
