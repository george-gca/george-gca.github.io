---
layout: default
---
<div class="post">
  <header class="post-header" style="--stagger: {{ animation_count }};" data-animate>
    {% assign animation_count = animation_count | plus: 1 %}
    <h1 class="post-title">{% t page.title %}</h1>
    <p class="post-description">
      {% if page.description %}{% t page.description %}{% endif %}
    </p>
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
